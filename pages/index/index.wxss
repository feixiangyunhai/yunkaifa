/**index.wxss**/
.container{
  width: 100%;
  background: #fff;
}

.scroll-view{
  display: flex;
  flex-direction: column;
  flex: 1;
}

.item{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}

.item image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.item .meta{
  flex: 1;
}

.item .title,.item sub-title{
  display: block;
  margin-bottom: 12rpx;
}

.item .title{
  font-size: 30rpx;
}

.item .sub-title{
  font-size: 21rpx;
  color: #c0c0c0;
}

.item .sub-title{
  font-size: 26rpx;
  color: #999;
}

.item .rating{
  font-size: 21rpx;
  color: red;
}
